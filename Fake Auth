import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.servlet.http.HttpSession;
import java.io.IOException;

public class LoginServlet extends HttpServlet {

    protected void doPost(HttpServletRequest request, HttpServletResponse response) throws IOException {
        // 從登入表單中取得帳號和密碼
        String username = request.getParameter("username");
        String password = request.getParameter("password");

        // 檢查帳號和密碼是否有效（這裡只是示例，請自行實作驗證邏輯）
        if (isValidUser(username, password)) {
            // 取得Session物件
            HttpSession session = request.getSession();
            // 將帳號存入Session
            session.setAttribute("username", username);
            // 將使用者重新導向到其他頁面
            response.sendRedirect("homepage.jsp"); // 替換成實際的目標頁面
        } else {
            // 登入失敗，重新導向到登入頁面
            response.sendRedirect("login.jsp"); // 替換成實際的登入頁面
        }
    }

    private boolean isValidUser(String username, String password) {
        // 實作帳號和密碼的驗證邏輯
        // 返回true表示有效，返回false表示無效
        // 請自行實作
    }
}


$(document).ready(function() {
    // 監聽登入表單的提交事件
    $('#loginForm').submit(function(event) {
        event.preventDefault(); // 阻止表單的默認提交行為

        // 獲取帳號和密碼
        var username = $('#username').val();
        var password = $('#password').val();

        // 使用AJAX發送登入請求
        $.ajax({
            type: 'POST',
            url: 'login', // 替換成後端處理登入的URL
            data: {
                username: username,
                password: password
            },
            success: function(response) {
                // 登入成功，重新導向到其他頁面
                window.location.href = 'homepage.jsp'; // 替換成實際的目標頁面
            },
            error: function() {
                // 登入失敗，顯示錯誤訊息
                alert('登入失敗，請檢查帳號和

